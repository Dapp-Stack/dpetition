{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es2017", "dom"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "jest"
    ],
    "paths": {
      "*": [
        "../node_modules/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}