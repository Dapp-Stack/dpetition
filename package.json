{
  "name": "@dpetition/workspace",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "relayer",
      "ethereum",
      "query",
      "client"
    ],
    "nohoist": [
      "**/font-awesome",
      "**/roboto-fontface",
      "**/vuetify"
    ]
  },
  "scripts": {
    "dev": "concurrently 'npm:watch:*'",
    "watch:ethereum": "cd ethereum; yarn das start",
    "watch:relayer:ts": "cd relayer; tsc --watch --pretty --preserveWatchOutput",
    "watch:relayer:node": "sleep 5 && DEBUG=t nodemon -V relayer/bin/www -w relayer/dist -i relayer/dist/tracker.json",
    "watch:client": "cd client; yarn serve"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "nodemon": "^1.18.9",
    "typescript": "^3.0.0"
  }
}
